pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    docker.build('nl-ops')
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    docker.image('nl-ops').inside {
                        sh 'pytest'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    docker.withRegistry('https://my-registry.com', 'my-credentials-id') {
                        docker.image('nl-ops').push('latest')
                    }
                }
            }
        }
    }
}
