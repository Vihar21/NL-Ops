pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/Vihar21/NL-Ops.git']]])
            }
        }
        stage('Build') {
            steps {
                script {
                    docker.build('nl-ops')
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    docker.image('nl-ops').inside {
                        sh 'pytest'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Push the Docker image to a Docker registry
                    docker.withRegistry('https://my-registry.com', 'my-credentials-id') {
                        docker.image('nl-ops').push('latest')
                    }
                }
            }
        }
    }
}
