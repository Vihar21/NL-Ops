pipeline {
    agent any

    stages {
        stage('Install Requirements') {
            steps {
                script {
                    bat 'pip install -r requirements.txt'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    // Run Pytest tests here
                    bat 'pytest'
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    bat 'docker build -t my-python-app:latest .'
                }
            }
        }
    }
}
